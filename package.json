{
  "name": "todolist",
  "displayName": "TodoList",
  "description": "TODO List helper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.todoList",
        "title": "TODO List"
      },
      {
        "command": "extension.refresh",
        "title": "Refresh list"
      },
      {
        "command": "extension.addTodoItem",
        "title": "Add TODO List Item"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoListContainer",
          "title": "TODO List",
          "icon": "./resources/dark/TodoIcon.svg"
        }
      ]
    },
    "views": {
      "todoListContainer": [
        {
          "id": "todoList",
          "name": "TODO List"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+alt+t",
        "command": "extension.addTodoItem",
        "when": "editorTextFocus",
        "mac": "cmd+alt+t"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
