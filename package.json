{
  "name": "todolist",
  "displayName": "TodoList",
  "description": "TODO List helper",
  "repository": "https://github.com/Dheovani/TODO-List",
  "icon": "resources/TodoIcon.png",
  "author": {
    "name": "Dheovani Xavier da Cruz",
    "email": "dheovani_xavier@outlook.com"
  },
  "publisher": "Dheovani",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todolist.refresh",
        "title": "Refresh list",
        "icon": "$(refresh)"
      },
      {
        "command": "todolist.addTodoItem",
        "title": "Add TODO List Item"
      },
      {
        "command": "todolist.openFile",
        "title": "Opens the file",
        "icon": "$(go-to-file)"
      },
      {
        "command": "todolist.deleteItem",
        "title": "Delete"
      },
      {
        "command": "todolist.clear",
        "title": "Delete all",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoListContainer",
          "title": "TODO List",
          "icon": "./resources/dark/TodoIcon.svg"
        }
      ]
    },
    "views": {
      "todoListContainer": [
        {
          "id": "todoList",
          "name": "TODO List"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+=",
        "command": "todolist.addTodoItem",
        "when": "editorTextFocus",
        "mac": "alt+="
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "todolist.refresh",
          "when": "view == todoList",
          "group": "navigation"
        },
        {
          "command": "todolist.clear",
          "when": "view == todoList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "todolist.openFile",
          "when": "view == todoList",
          "group": "inline"
        },
        {
          "command": "todolist.deleteItem",
          "when": "view == todoList"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
